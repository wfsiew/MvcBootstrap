@model MvcBootstrap.Models.Instructor

@using MvcBootstrap.Helpers;

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <form class="form-horizontal" role="form">
        <fieldset>
            <legend>Instructor</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FirstMidName, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.FirstMidName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.HireDate, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.HireDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FullName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>
        </fieldset>
    </form>
</div>

<nav class="navbar navbar-default" role="navigation">
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Edit", new { id = Model.PersonID })"><i class="glyphicon glyphicon-pencil"></i> Edit</a></li>
        <li><a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Back to List</a></li>
    </ul>
</nav>
