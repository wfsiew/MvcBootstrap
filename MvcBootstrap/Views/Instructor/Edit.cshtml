@model MvcBootstrap.Models.Instructor

@using MvcBootstrap.ViewModels;

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="well">
@using (Html.BeginForm("Edit", "Instructor", FormMethod.Post, new { name = "instructorform", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Instructor</legend>

        @Html.HiddenFor(model => model.PersonID)

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name" })
                @Html.ValidationMessageFor(model => model.LastName,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstMidName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.FirstMidName, new { @class = "form-control", placeholder = "First Name" })
                @Html.ValidationMessageFor(model => model.FirstMidName,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HireDate, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.HireDate, new { @class = "form-control", placeholder = "Hire Date" })
                @Html.ValidationMessageFor(model => model.HireDate,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OfficeAssignment.Location, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.OfficeAssignment.Location, new { @class = "form-control", placeholder = "Office Location" })
                @Html.ValidationMessageFor(model => model.OfficeAssignment.Location,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">Courses</label>
            <div class="col-lg-10">
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<AssignedCourseData> courses = ViewBag.Courses;

                            foreach (AssignedCourseData course in courses)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                    @:  </tr> <tr> 
                                }
                                @: <td>
                                    <input type="checkbox" 
                                           name="selectedCourses" 
                                           value="@course.CourseID" 
                                           @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) /> 
                                    @course.CourseID @:  @course.Title
                                @:</td>
                            }
                            @: </tr>
                        }
                </table>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
                <a class="btn btn-default" href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
