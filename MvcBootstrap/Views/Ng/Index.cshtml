@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="mvcapp" ng-controller="HeadCtrl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/img/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <title>{{Page.title}}</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/app.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top" role="navigation">
        <div class="pull-right">
            <ul class="nav nav-tabs" ng-controller="IndexCtrl">
                <li ng-click="menuClick('home')" ng-class="{active: menu.home}"><a href="#/index">Home</a></li>
                <li ng-click="menuClick('about')" ng-class="{active: menu.about}"><a href="#/about">About</a></li>
                <li ng-click="menuClick('students')" ng-class="{active: menu.students}"><a href="#/students">Students</a></li>
                <li ng-click="menuClick('courses')" ng-class="{active: menu.courses}"><a href="#/courses">Courses</a></li>
                <li ng-click="menuClick('instructors')" ng-class="{active: menu.instructors}"><a href="#/instructors">Instructors</a></li>
                <li ng-click="menuClick('departments')" ng-class="{active: menu.departments}"><a href="#/departments">Departments</a></li>
            </ul>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/respond.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ui-bootstrap-tpls-0.6.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/underscore-min.js"></script>
    <script type="text/javascript" src="~/Scripts/ngapp.js"></script>
    <script type="text/javascript" src="~/Scripts/ngapp/filters.js"></script>
    <script type="text/javascript" src="~/Scripts/ngapp/controllers.js"></script>
    <div class="content container" ng-view></div>
</body>
</html>
