@model MvcBootstrap.Models.Department

@using MvcBootstrap.Helpers;

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <form class="form-horizontal" role="form">
        <fieldset>
            <legend>Department</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Budget, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Budget)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StartDate, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.StartDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Administrator.LastName, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Administrator.LastName)
                </div>
            </div>
        </fieldset>
    </form>
</div>

<nav class="navbar navbar-default" role="navigation">
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Edit", new { id = Model.DepartmentID })"><i class="glyphicon glyphicon-pencil"></i> Edit</a></li>
        <li><a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Back to List</a></li>
    </ul>
</nav>
