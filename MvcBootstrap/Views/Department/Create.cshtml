@model MvcBootstrap.Models.Department

@using MvcBootstrap.Helpers;

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="well">
@using (Html.BeginForm("Create", "Department", FormMethod.Post, new { name = "departmentform", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Department</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, HtmlHelpers.LabelAttributes())
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Name, HtmlHelpers.TextBoxAttributes("Name"))
                @Html.ValidationMessageFor(model => model.Name,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Budget, HtmlHelpers.LabelAttributes())
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Budget, HtmlHelpers.TextBoxAttributes("Budget"))
                @Html.ValidationMessageFor(model => model.Budget,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, HtmlHelpers.LabelAttributes())
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.StartDate, HtmlHelpers.TextBoxAttributes("Start Date"))
                @Html.ValidationMessageFor(model => model.StartDate,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PersonID, HtmlHelpers.LabelAttributes())
            <div class="col-lg-10">
                @Html.DropDownList("PersonID", ViewBag.PersonID as SelectList, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PersonID,  "", new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Create</button>
                <a class="btn btn-default" href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
