@model MvcBootstrap.Models.Course

@using MvcBootstrap.Helpers;

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="well">
    <form class="form-horizontal" role="form">
        <fieldset>
            <legend>Course</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.CourseID, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.CourseID)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Title, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Credits, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Credits)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Department.Name, HtmlHelpers.LabelAttributes())
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Department.Name)
                </div>
            </div>
        </fieldset>
    </form>
</div>

<nav class="navbar navbar-default" role="navigation">
    <ul class="nav navbar-nav">
        <li><a href="@Url.Action("Edit", new { id = Model.CourseID })"><i class="glyphicon glyphicon-pencil"></i> Edit</a></li>
        <li><a href="@Url.Action("Index")"><i class="glyphicon glyphicon-arrow-left"></i> Back to List</a></li>
    </ul>
</nav>
